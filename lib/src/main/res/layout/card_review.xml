<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collapsable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <TextureView
        android:id="@+id/tv_card_video"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/padding_small"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cliptype_medium"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_centerHorizontal="true"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btn_jumble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_card_video"
        style="@style/button"
        android:background="@android:color/transparent"
        android:textColor="@color/storymaker_highlight"
        android:drawablePadding="@dimen/padding_small"
        android:paddingTop="@dimen/padding_xsmall"
        android:text="@string/jumble"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button"
        android:layout_below="@id/btn_jumble"
        android:background="@android:color/transparent"
        android:textColor="@color/storymaker_highlight"
        android:drawablePadding="@dimen/padding_small"
        android:paddingTop="@dimen/padding_xsmall"
        android:text="@string/order" />

    <Button
        android:id="@+id/btn_narrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button"
        android:layout_below="@id/btn_order"
        android:background="@android:color/transparent"
        android:textColor="@color/storymaker_highlight"
        android:drawablePadding="@dimen/padding_small"
        android:paddingTop="@dimen/padding_xsmall"
        android:text="@string/narrate" />

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button"
        android:layout_below="@id/btn_narrate"
        android:background="@android:color/transparent"
        android:textColor="@color/storymaker_highlight"
        android:drawablePadding="@dimen/padding_small"
        android:paddingTop="@dimen/padding_xsmall"
        android:text="@string/publish" />
</RelativeLayout>

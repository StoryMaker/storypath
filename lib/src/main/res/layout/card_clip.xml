<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/clipCandidates"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/raspberry_wine"
        android:id="@+id/howtoCard"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/card_howto_height"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_small"
        android:text="@string/card_howto_tap_to_select_clip"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_medium"
        android:textStyle="italic"
        android:alpha="0"/>

    <Spinner
        android:id="@+id/overflowSpinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="16dp"
        android:layout_below="@id/clipCandidates"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/ic_overflow"
        android:textColor="@color/raspberry_wine"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium" />

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/overflowSpinner"
        android:layout_below="@id/clipCandidates"
        android:paddingTop="@dimen/padding_medium"
        android:drawableLeft="@drawable/ic_signature"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/raspberry_wine"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/collapsable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerText"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:textSize="22sp" />

        <Button
            android:id="@+id/importBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_whoknows"
            android:drawablePadding="@dimen/padding_xsmall"
            android:paddingTop="@dimen/padding_small"
            android:text="@string/importt"
            android:textColor="@color/raspberry_wine" />

        <Button
            android:id="@+id/captureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_capture"
            android:drawablePadding="@dimen/padding_xsmall"
            android:paddingTop="@dimen/padding_small"
            android:text="@string/capture"
            android:textColor="@color/raspberry_wine" />

    </LinearLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CardText">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardLink">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@drawable/card_link_button_text</item>
        <item name="android:background">@drawable/card_link_button_background</item>
    </style>

    <style name="h1" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="h2" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="h3" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="h6" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="p" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="p_italic" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="p_emphasis" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="caption" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="button" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="StackTitle" parent="@style/CardText">
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_title_text</item>
    </style>

    <style name="ProgressCard" parent="@style/CardText">
        <item name="android:background">#bbbbbb</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:background">#eeeeee</item>
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
